<%- include("parts/head"); %>

<main>
    <section class="gallery">
        <h2>Entries</h2>
        <button>Filter</button>
        <hr>
        
        <div class="entry-grid">
            <!-- template for entry -->
            <%- include("parts/entry-card"); %>
        </div>

        <!-- script to generate entries -->
        <script src="scripts/generate-entries.js"></script>
    </section>

    <!-- templates for dynamic content in the aside -->
    <%- include("parts/create-form"); %>
    <%- include("parts/entry-view"); %>
    <%- include("parts/filters"); %>
    <section class="side">
    </section>

    <section class="button-holder">
        <button class="invisible" id="accept"><i class="fas fa-check"></i></button>
        <button class="invisible" id="edit"><i class="fas fa-edit"></i></button>
        <button class="invisible hover-bad" id="cancel"><i class="fas fa-times"></i></button>
        <button id="new"><i class="fas fa-plus"></i></button>
    </section>
