<div class="create-form invisible">
    <div class="entry-line">
        <div class="new">
            <h2 class="left">Title: </h2>
            <input class="right" type="text" name="title" id="title-new" placeholder="Unnamed Entry">
            <hr>

            <h3 class="left">Product: </h3>
            <input class="right" type="text" name="product" id="product-new" placeholder="Product Name">

            <h3 class="left">Rating: </h3>
            <div class="rating right" id="rating-new">
                <i class="fas fa-cannabis"></i>
                <i class="fas fa-cannabis"></i>
                <i class="fas fa-cannabis"></i>
                <i class="fas fa-cannabis"></i>
                <i class="fas fa-cannabis"></i>
            </div>

            <h3 class="left">Date of Experience: </h3>
            <input class="right" type="date" name="dateOfExperience" id="date-new" placeholder="Date of Experience">

            <h3 class="left">Content: </h3>
            <textarea class="right" name="content" id="content-new" 
                placeholder="Write about your experience here."></textarea>

                <div class="foldable">
                    <div class="foldable-header">
                        <i class="fas fa-chevron-circle-down"></i>
                        <h3>More Experience Details</h3>
                    </div>
    
                    <div class="folder closed">
                        <h3 class="left">Time of Day: </h3>
                        <input class="right" type="text" id="time-of-day-new" value="" placeholder="Morning, Night, etc.">

                        <h3 class="left">Duration (Hours): </h3>
                        <input class="right" type="number" id="duration-new" value="" placeholder="0">
                    </div>
                </div>

                <div class="foldable">
                    <div class="foldable-header">
                        <i class="fas fa-chevron-circle-down"></i>
                        <h3>Product Details</h3>
                    </div>
    
                    <div class="folder closed">
                        <h3 class="left">Strain Type: </h3>
                        <input class="right" type="text" id="strain-type-new" value="" placeholder="Sativa, Indica, etc.">

                        <h3 class="left">Strains: </h3>
                        <input class="right" type="text" id="strains-new" value="" placeholder="Strains">

                        <h3 class="left">Company: </h3>
                        <input class="right" type="text" id="company-new" value="" placeholder="Company">

                        <h3 class="left">Product Type: </h3>
                        <input class="right" type="text" id="type-new" value="" placeholder="Joint, Edible, etc.">

                        <h3 class="left">Quantity: </h3>
                        <input class="right" type="number" id="quantity-new" value="" placeholder="0">

                        <h3 class="left">Portion Size (Grams): </h3>
                        <input class="right" type="number" id="portion-new" value="" placeholder="0">
                    </div>
                </div>

                <div class="foldable">
                    <div class="foldable-header">
                        <i class="fas fa-chevron-circle-down"></i>
                        <h3>Purchase Details</h3>
                    </div>
    
                    <div class="folder closed">
                        <h3 class="left">Price (USD): </h3>
                        <input class="right" type="number" id="price-new" value="" placeholder="0">

                        <h3 class="left">Dispensary: </h3>
                        <input class="right" type="text" id="store-new" value="" placeholder="Dispensary">

                        <h3 class="left">City: </h3>
                        <input class="right" type="text" id="city-new" value="" placeholder="City">

                        <h3 class="left">State: </h3>
                        <input class="right" type="text" id="state-new" value="" placeholder="State">

                        <h3 class="left">Country: </h3>
                        <input class="right" type="text" id="country-new" value="" placeholder="Country">
                    </div>
                </div>

                <div class="foldable">
                    <div class="foldable-header">
                        <i class="fas fa-chevron-circle-down"></i>
                        <h3>Chemical Details</h3>
                    </div>
    
                    <div class="folder closed">
                        <h3 class="left">THC (%): </h3>
                        <input class="right" type="number" id="thc-new" value="" placeholder="0">

                        <h3 class="left">THCA (%): </h3>
                        <input class="right" type="number" id="thca-new" value="" placeholder="0">

                        <h3 class="left">d8THC (%): </h3>
                        <input class="right" type="number" id="d8thc-new" value="" placeholder="0">

                        <h3 class="left">d9THC (%): </h3>
                        <input class="right" type="number" id="d9thc-new" value="" placeholder="0">

                        <h3 class="left">CBD (%): </h3>
                        <input class="right" type="number" id="cbd-new" value="" placeholder="0">

                        <h3 class="left">CBG (%): </h3>
                        <input class="right" type="number" id="cbg-new" value="" placeholder="0">
                    </div>
                </div>
        
            <input type="hidden" id="author-new" value="<%= user %>">
        </div>
    </div>

    
    <p id="create-form-info"></p>
</div>